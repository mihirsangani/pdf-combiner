# Application
APP_NAME=FileForge
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database
DATABASE_URL=postgresql+asyncpg://fileforge:fileforge_dev_pass@localhost:5432/fileforge
POSTGRES_USER=fileforge
POSTGRES_PASSWORD=fileforge_dev_pass
POSTGRES_DB=fileforge
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-this-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:80
ALLOWED_HOSTS=localhost,127.0.0.1
RATE_LIMIT_PER_MINUTE=60
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes

# File Storage
STORAGE_TYPE=local  # local or s3
UPLOAD_DIR=./uploads
TEMP_DIR=./temp
FILE_TTL_HOURS=24

# AWS S3 (if using S3 storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=fileforge-uploads
S3_ENDPOINT_URL=

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@fileforge.com
EMAILS_FROM_NAME=FileForge

# OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Monitoring
SENTRY_DSN=
ENABLE_PROMETHEUS=True

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_TRACK_STARTED=True
CELERY_TASK_TIME_LIMIT=3600

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
